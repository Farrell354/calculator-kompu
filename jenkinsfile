pipeline {
    agent any

    environment {
        IMAGE_NAME = "calculator-web"
        CONTAINER_NAME = "calculator_web_container"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', 
                    url: 'https://github.com/Farrell354/calculator-kompu.git', 
                    credentialsId: 'github-token'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t ${IMAGE_NAME}:latest ."
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Hentikan container lama kalau ada
                    sh "docker rm -f ${CONTAINER_NAME} || true"
                    // Jalankan container baru
                    sh "docker run -d -p 8080:80 --name ${CONTAINER_NAME} ${IMAGE_NAME}:latest"
                }
            }
        }
    }

    post {
        success {
            echo "Calculator web berhasil dijalankan di http://localhost:8080"
        }
        failure {
            echo "Build gagal!"
        }
    }
}
