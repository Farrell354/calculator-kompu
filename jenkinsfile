pipeline {
    agent any

    environment {
        IMAGE_NAME = "calculator-web"
        CONTAINER_NAME = "calculator_web_container"
    }

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                bat 'docker build -t %IMAGE_NAME% .'
            }
        }

      stage('Run Docker Container') {
    steps {
        bat 'docker rm -f %CONTAINER_NAME% || echo Container tidak ada'
        bat 'docker run -d -p 82:80 --name %CONTAINER_NAME% %IMAGE_NAME%'
    }
}

    post {
        success {
            echo "Calculator web berhasil dijalankan di http://localhost:8080"
        }
        failure {
            echo "Build gagal!"
        }
    }
}
