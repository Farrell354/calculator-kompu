pipeline {
    agent any

    environment {
        IMAGE_NAME = "calculator-web"
        CONTAINER_NAME = "calculator_web_container"
        HOST_PORT = "82"
        CONTAINER_PORT = "80"
        APP_URL = "http://localhost:82"
    }

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                bat 'docker build -t %IMAGE_NAME% .'
            }
        }

        stage('Run Docker Container') {
            steps {
                bat 'docker rm -f %CONTAINER_NAME% || echo Container tidak ada'
                bat 'docker run -d -p %HOST_PORT%:%CONTAINER_PORT% --name %CONTAINER_NAME% %IMAGE_NAME%'
            }
        }

        stage('Verify App') {
            steps {
                // Tunggu container start
                bat 'timeout /t 5'
                
                // Verifikasi dengan curl
                bat """
                curl -s -o nul -w "%{http_code}" %APP_URL% | findstr 200
                """
            }
        }
    }

    post {
        success {
            echo "Calculator web berhasil dijalankan dan terverifikasi di %APP_URL%"
        }
        failure {
            echo "Build atau verifikasi gagal!"
        }
    }
}
